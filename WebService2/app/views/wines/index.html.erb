<p id="notice"><%= notice %></p>

<h1>Wine Catalogue</h1>

<table>
  <% @wines.each do |wine| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
          <dl>
            <dt><%= wine.name %></dt>
            <dd><%= strip_tags(wine.description) %></dd>
          </dl>
        </td>
        <td class="list_description">
          <dl>
            <dt>Wine Information</dt>
            <dd>Price: Â£<%= wine.price %></dd>
            <dd>Size:<%= wine.bottle_size %></dd>
            <dd>Grape: <%= wine.grape_type %></dd>
            <dd>Country of Origin: <%= wine.country_of_origin %></dd>
            <dd>Suitable For Vegetarians: <%= wine.suitable_for_vegetarians %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', wine %><br/>
          <%= link_to 'Edit', edit_wine_path(wine) %><br/>
          <%= link_to 'Destroy', wine, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
</table>

